@page "/"
@page "/home"
@using Sorting_Visualizer.Pages.CanvasComponent
@using Sorting_Visualizer.Models
@inject DataService DataService

<PageTitle>Home</PageTitle>

<CanvasComponent id="main-grid" Width="1200" Height="750" />

@code {
    
    public Data[] DataList { get; set; } = new Data[50];

    protected override void OnInitialized()
    {
        for (int i = 0; i < 50; i++)
        {
            Data data = new Data(new Data.Point(i * 20, 700), i );
            DataList[i] = data;
        }

        Data.ShuffleValues(DataList);

        DataService.SetData(DataList);
    }
}
